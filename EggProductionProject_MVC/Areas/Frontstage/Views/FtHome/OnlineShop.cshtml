@section Scripts {

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const elements = document.querySelectorAll('.select-n');
            elements.forEach(function (element) {
                new Choices(element, {
                    searchEnabled: false,
                    itemSelectText: ''
                });
            });
        });

        // 限時特賣的輪播圖
        document.addEventListener('DOMContentLoaded', function () {
            const mainCarousel = document.getElementById('mainCarousel');
            const limitedOfferCarousel = document.getElementById('limitedOfferCarousel');

            // 为上方大轮播图初始化
            let mainCarouselInstance = new bootstrap.Carousel(mainCarousel, {
                interval: 3000,
                wrap: true
            });

            // 为限时特卖轮播图初始化
            let limitedOfferCarouselInstance = new bootstrap.Carousel(limitedOfferCarousel, {
                interval: false,
                wrap: false
            });
        });

        // 限時特賣區的js
        document.addEventListener('DOMContentLoaded', function () {
            // 設定倒計時結束時間
            var countDownDate = new Date("Aug 31, 2024 24:00:00").getTime();

            // 更新倒計時
            var countdownfunction = setInterval(function () {

                var now = new Date().getTime();
                var distance = countDownDate - now;

                var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                var seconds = Math.floor((distance % (1000 * 60)) / 1000);

                document.getElementById("countdown").innerHTML = hours + "h "
                    + minutes + "m " + seconds + "s ";

                if (distance < 0) {
                    clearInterval(countdownfunction);
                    document.getElementById("countdown").innerHTML = "已結束";
                }
            }, 1000);
        });

        // 清除篩選按鈕事件
        document.addEventListener('DOMContentLoaded', function () {
            const clearButton = document.getElementById('clear-filters');

            clearButton.addEventListener('click', function () {
                // 清除所有复选框
                const checkboxes = document.querySelectorAll('.filter-sidebar input[type="checkbox"]');
                checkboxes.forEach(checkbox => checkbox.checked = false);

                // 清除所有单选按钮
                const radios = document.querySelectorAll('.filter-sidebar input[type="radio"]');
                radios.forEach(radio => radio.checked = false);

                // 清空所有文本输入框
                const textInputs = document.querySelectorAll('.filter-sidebar input[type="text"], .filter-sidebar input[type="number"]');
                textInputs.forEach(input => input.value = '');

                // 重設全局 searchProductData 物件的值，同時重設為初始搜尋結果
                searchProductData.subcategoryNo = 0;
                searchProductData.keyword = "";
                searchProductData.page = 1;
                searchProductData.pageSize = 9;
                searchProductData.sortType = "asc";
                searchProductData.sortBy = "productSid";
                searchProductData.minPrice = 0;
                searchProductData.maxPrice = 1000;

                loadProducts();
            });
        });

        const divProducts = document.querySelector('#divProduct')
        const ulPage = document.querySelector('#ulPagination')
        const inpSearch = document.querySelector('#inputSearch')
        const btnSearch = document.querySelector('#buttonSearch')
        const inpMinPrice = document.getElementById('minPrice')
        const inpMaxPrice = document.getElementById('maxPrice')

        // searchProductData要設計JSON物件
        const searchProductData = {
            "subcategoryNo": 0,
            "keyword": "",
            "page": 1,
            "pageSize": 9,
            "sortType": "asc",
            "sortBy": "productSid",
            "minPrice": 0,  
            "maxPrice": 1000  
        }

        //依分類篩選商品
        const filterByCategory = () => {
            let selectedCategory = 0;
            document.querySelectorAll('.filter-sidebar input[type="radio"]').forEach(radio => {
                if (radio.checked) {
                    selectedCategory = parseInt(radio.value); // 将当前选中的 radio 的值赋值给 selectedCategory
                }
            });

            searchProductData.subcategoryNo = selectedCategory; // 将选中的分类编号更新到 searchProductData 中
            loadProducts();  // 重新加载产品列表
        }


        //價格區間篩選商品
        const filterByPrice = () => {           
            // 將價格範圍更新到 searchProductData 中
            searchProductData.minPrice = inpMinPrice.value || 0;  
            searchProductData.maxPrice = inpMaxPrice.value || 1000;
            loadProducts();  // 重新加載產品列表
        }

        //關鍵字搜尋-enter鍵
        inpSearch.addEventListener('keydown', event => {
            if (event.which === 13) {
                searchProductData.keyword = inpSearch.value
                loadProducts()
            }
        })
        //關鍵字搜尋-按鈕
        btnSearch.addEventListener('click', event => {            
                searchProductData.keyword = inpSearch.value
                loadProducts()            
        })

        //根據上架日期最新以及價格排序商品
        const sortProducts = (sortBy, sortType) => {
            searchProductData.sortBy = sortBy;
            searchProductData.sortType = sortType;
            loadProducts();  // 重新加載產品資料
        }

        //顯示該分頁資料
        const pagingHandler = (event, page) => {
            event.preventDefault();  // 阻止預設行為
            searchProductData.page = page;

            // 滾動到商品卡片群的最上方
            const productSection = document.querySelector('#divProduct');
            productSection.scrollIntoView({ behavior: 'smooth' });

            loadProducts();
        }


        //searchProductData的JSON物件以POST方式請求給API，載入商品資料
        const loadProducts = async () => {
            const api = '@Url.Content("~/ProductApi/Products")'
            const response = await fetch(api, {
                method: "post",
                body: JSON.stringify(searchProductData),
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            const datas = await response.json()
            console.log(datas)

            //JSON 資料讀取及顯示
            const products = datas.productsResult.map(product => {
                const { productSid, productName, price, stock, subcategoryNo, storeSid, productImagePath, imageDescription } = product
                return (`
                           <div class="col-lg-4">
                              <div class="product-card">
                                 <img src="${productImagePath}" alt = "${imageDescription}">
                                 <div class="card-body">
                                    <h5 class="card-title">${productName} </h5>
                                    <div class="price-and-button">
                                       <p class="price"> $${price * 0.8} <span class="old-price"> $${price} </span></p>
                                       <button class="btn" > 查看更多 </button>
                                    </div>
                                 </div>
                              </div>
                           </div>
                       `)
            })
            divProducts.innerHTML = products.join("")

            ulPage.innerHTML = "";

            //產生分頁按鈕
            let liPages = ""
            for (let i = 1, max = datas.totalPages; i <= max; i++) {
                liPages += `<li class="page-item" onclick="pagingHandler(event, ${i})"><a class="page-link" href = "#">${i}</a></li>`
            }
            //將生成完的分頁標籤做最後加工再送出去
            liPages = `<li class="page-item">
                          <a class="page-link" href="#">
                          <i class="fas fa-angle-left"></i>
                          </a>
                       </li>
                       ${liPages}
                               <li class="page-item">
                          <a class="page-link" href="#">
                          <i class="fas fa-angle-right"></i>
                          </a>
                       </li>`

            ulPage.innerHTML = liPages
               
        }

        loadProducts()
    </script>

