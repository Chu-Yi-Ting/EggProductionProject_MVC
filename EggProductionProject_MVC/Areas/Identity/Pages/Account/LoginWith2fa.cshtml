@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "輸入帳戶驗證碼";
}
@section Styles {
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            height: 100vh;
        }

        .container-fluid {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            position: relative;
            padding: 0;
        }

        /* 確保圖片全屏顯示並位於正中間 */
        .left-column {
            position: relative;
            width: 100%;
            height: 100%;
            background: url('https://upload.wikimedia.org/wikipedia/commons/thumb/3/3e/A_Basket_of_Chicken_Eggs_at_Tuen_Mun.jpg/1200px-A_Basket_of_Chicken_Eggs_at_Tuen_Mun.jpg') no-repeat center center;
            background-size: cover;
        }

        /* login-box 的樣式設定，確保它覆蓋在圖片的正中間 */
        .login-box {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 100%;
            max-width: 450px;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            z-index: 10; /* 確保它顯示在圖片上方 */
        }

            .login-box h1 {
                color: #b3922c;
                font-size: 24px;
                margin-bottom: 20px;
                text-align: center;
            }

            .login-box label {
                color: #b3922c;
            }

            .login-box .btn-primary {
                background-color: #b3922c;
                border: none;
            }

                .login-box .btn-primary:hover {
                    background-color: #a37e2b;
                }
    </style>
}

<h2>@ViewData["Title"]</h2>
<hr />
<p></p>






<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 left-column"></div>
        <div class="col-md-6 right-column">
            <br />
            <br />


            <br />
            <div class="login-box">
                <h1>您的帳號已被雙因數驗證應用程式保護。請在下方輸入您的驗證代碼。</h1>
                <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                    <input asp-for="RememberMe" type="hidden" />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.TwoFactorCode"></label>
                        <input asp-for="Input.TwoFactorCode" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMachine">
                                <input asp-for="Input.RememberMachine" />
                                @Html.DisplayNameFor(m => m.Input.RememberMachine)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-light w-100 me-2">確定</button>
                    </div>
                </form>
                @*   <div class="d-flex justify-content-between">
                <button type="button" class="btn btn-light w-100 me-2">使用 GOOGLE</button>
                <button type="button" class="btn btn-light w-100 ms-2">使用 FACEBOOK</button>
                </div> *@
                <p>
                    手邊沒有驗證的應用程式嗎?您可以
                    <a asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">使用序號登入</a>.
                </p>
            </div>
          
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}