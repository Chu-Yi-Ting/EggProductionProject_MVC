@model IEnumerable<EggProductionProject_MVC.Models.MemberVM.MemberVM>

@{
    ViewData["Title"] = "Index";
}



<h2>Index</h2>

<p>
    @* <a asp-action="Create">Create New</a> *@
    <div>會員數量 : @Model.Count()</div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsChickFarm)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.ProfilePic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBlocked)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                  @if (item.IsChickFarm == 1)
                    {
                        @:雞農
                    }
                    else
                    {
                        @:一般用戶
                    }
            </td>
           
            <td>
                
                    <partial name="_ProfilePicPartialView" model="@item" />
            </td>
            <td>
                    <form asp-action="UpdateIsBlocked" method="post">
                        <select asp-for="@item.IsBlocked" class="form-control" asp-items="@(new SelectList(new List<SelectListItem> {
                            new SelectListItem { Text = "未封鎖", Value = "0" },
                            new SelectListItem { Text = "已封鎖", Value = "1" }
                        }, "Value", "Text", item.IsBlocked))"></select>
                        <input type="hidden" asp-for="@item.MemberSid" />
                        <button type="submit" class="btn btn-primary">更新</button>
                    </form>
            </td>
           
            <td>
                <a asp-action="Details" asp-route-id="@item.MemberSid">Details</a> |
                    <a asp-controller="Friends" asp-action="index" asp-route-id="@item.MemberSid">好友查詢</a> |
                    <a asp-controller="Logs" asp-action="index" asp-route-id="@item.MemberSid">登入查詢</a>
            </td>
        </tr>
}
    </tbody>
</table>

