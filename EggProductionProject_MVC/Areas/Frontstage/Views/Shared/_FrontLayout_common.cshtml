<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="" />
    <meta name="author"
          content="Mark Otto, Jacob Thornton, and Bootstrap contributors" />
    <meta name="generator" content="Hugo 0.88.1" />
    <title>@ViewData["Title"] - EggProductionProject_MVC</title>

    @* <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" /> *@
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/choices.js/choices.min.css" rel="stylesheet" />
    <link href="~/frontstagetemplate/assets/dist/css/style.css?version1.0" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/dist/css/footer-style.css">
    @await RenderSectionAsync("Styles", required: false)

</head>
<body>
   
    <header>
        <div class="container_title p-0 m-0">
            <div class="nav-main d-flex flex-wrap">
                <div class="d-flex flex-column align-items-center">
                    <a href="https://localhost:7080/"
                       class="d-flex align-items-center mb-2 text-dark text-decoration-none">
                        <img src="~/FrontstageTemplate/assets/brand/layout/egg-logo.svg"
                             class="bi me-2"
                             width="160"
                             alt="Bootstrap" />
                    </a>
                    <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center d-none d-lg-flex">
                        <li><a asp-area="Frontstage" asp-controller="Data" asp-action="Index" class="nav-link px-3 link-light">生產分析</a></li>
                        <li><a href="http://localhost:4200/#/Article" class="nav-link px-3 link-light">知識討論</a></li>
                        <li><a href="http://localhost:4200/#/video_summary" class="nav-link px-3 link-light">影片生活</a></li>
                        <li><a asp-area="Frontstage" asp-controller="Product" asp-action="OnlineShop" class="nav-link px-3 link-light">商城購物</a></li>
                    </ul>
                </div>

                <div class="nav-right">
                    <a href="https://localhost:7080/Frontstage/carts"
                       class="d-block link-dark text-decoration-none"
                       aria-expanded="false">
                        <i class="fa-solid fa-cart-shopping"></i>
                    </a>

                    <a href="@(User.Identity.IsAuthenticated? Url.Action("MemberCenter", "Members", new { area = "Frontstage" }):Url.Action("Login", "Account", new { area = "Identity" } ))"
                       class="d-block link-dark text-decoration-none"
                       aria-expanded="false">
                        
                        @{
                            if (@HttpContextAccessor.HttpContext.Session.GetString("userProfilePic") != null)
                            {
                                <img id="TopUserPic" src="@HttpContextAccessor.HttpContext.Session.GetString("userProfilePic")"
                                     alt="mdo"
                                     width="28"
                                     height="28"
                                     class="rounded-circle" />
                            }
                            else
                            {
                                <img id="TopUserPic" src="~/memberimg/nopicchick.jpg"
                                     alt="mdo"
                                     width="28"
                                     height="28"
                                     class="rounded-circle" />
                            }
                                        
                        }
                    </a>
                    <button class="navbar-toggler link-dark text-decoration-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                        <i class="fa-solid fa-bars"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasNavbarLabel">
                    <img src="~/FrontstageTemplate/assets/brand/layout/egg-logo.svg" alt="">
                </h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="https://localhost:7080/">
                            <i class="fa-solid fa-house me-2"></i> 首頁
                        </a>
                    </li>
                    <li class="nav-item mt-2">
                        <span>網站服務</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-area="Frontstage" asp-controller="Data" asp-action="Index">
                            <i class="fa-solid fa-chart-line me-2"></i>
                            每日蛋雞生產分析
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="http://localhost:4200/#/Article">
                            <i class="fa-solid fa-feather-pointed me-2"></i>
                            知識討論
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="http://localhost:4200/#/video_summary">
                            <i class="fa-solid fa-clapperboard me-2"></i>
                            影片生活
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-area="Frontstage" asp-controller="Product" asp-action="OnlineShop">
                            <i class="fa-solid fa-shop me-2"></i>
                            商城購物
                        </a>
                    </li>
                    <li class="nav-item mt-2">
                        <span>網站服務</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="https://localhost:7080/Frontstage/Members/MemberCenter">
                            <i class="fa-solid fa-user-large me-2"></i>
                            會員中心
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-controller="AccountLogin" asp-action="Index">
                            <i class="fa-solid fa-shop me-2"></i>
                            員工管理
                        </a>
                    </li>
                </ul>
            </div>
           <partial name="_LoginPartial"/>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="section bg-footer d-flex justify-content-center flex-column flex-lg-row" style="
    min-height: 304px;
    align-items: center;
">
        <div class=" footer-container d-flex justify-content-center flex-column flex-lg-row">
            <div class="d-flex justify-content-center mb-5 mb-lg-0">
                <div class="mx-4">
                    <h6 class="footer-heading text-uppercase text-white">網站服務</h6>
                    <ul class="footer-link mt-4">
                        <li><a href="https://localhost:7080/Frontstage/Data/Index">生產分析</a></li>
                        <li><a href="http://localhost:4200/#/Article">知識討論</a></li>
                        <li><a href="http://localhost:4200/#/video_summary">影片生活</a></li>
                        <li><a href="https://localhost:7080/Frontstage/Product/OnlineShop">商城購物</a></li>
                    </ul>
                </div>
                <div class="mx-4">
                    <h6 class="footer-heading text-uppercase text-white">用戶服務</h6>
                    <ul class="footer-link mt-4">
                        <li><a href="https://localhost:7080/Identity/Account/Login">註冊登入</a></li>
                        <li><a href="https://localhost:7080/Frontstage/Members/MemberCenter">會員中心</a></li>
                        <li><a href="https://localhost:7080/Frontstage/StoreCenters">賣家中心</a></li>
                    </ul>
                </div>
            </div>

            <div class="footer-link mx-2-4">
                <h6 class="footer-heading text-uppercase text-white">聯絡我們</h6>
                <p class="contact-info mt-4">電子信箱</p>
                <p class="contact-info">goodeggtworg@gmail.com</p>
                <div>
                    <ul class="list-inline">
                        <li class="list-inline-item"><a href="#!"><i class="fab facebook footer-social-icon fa-facebook-f"></i></a></li>
                        <li class="list-inline-item"><a href="#!"><i class="fab instagram footer-social-icon fa-instagram"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="text-center mt-5">
            <p class="footer-alt">修蛋幾勒 ©2024出品  | 企業編號 MSIT161</p>

        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/choices.js/choices.min.js"></script>
   @*  <script src="~/FrontstageTemplate/assets/dist/js/self_n.js"></script> *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
