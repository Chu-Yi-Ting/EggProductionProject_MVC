@model EggProductionProject_MVC.Areas.Frontstage.ViewModels.ProductAndStoreViewModel

@{
    Layout = "_FrontLayout_light";
}

@section Styles {

    <style>
        .container-custom {
            max-width: 1000px;
            /* 調整容器寬度以增加留白 */
            margin: 0 auto;
            /* 居中對齊 */
            padding: 20px;
            /* 增加上下內邊距 */
        }

        .custom-carousel img {
            width: 100%;
            /* 保持图片宽度与容器一致 */
            height: 350px;
            /* 固定高度，例如400px，可以根据需要调整 */
            object-fit: cover;
            /* 让图片在保持宽度满版的同时裁剪高度超出部分 */
        }

        .store-header {
            background-color: white;
            padding: 20px;
            border: 2px solid #b8860b;
            border-radius: 7px;
            margin: 20px 0;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .store-header img {
                border-radius: 50%;
                width: 80px;
                height: 80px;
                margin-right: 20px;
            }

        .store-header-content {
            flex-grow: 1;
        }

            .store-header-content h2 {
                margin: 0;
                font-size: 24px;
                color: #b8860b;
            }

            .store-header-content .info {
                display: flex;
                justify-content: space-between;
                margin-top: 10px;
                padding: 10px;
                background-color: #f5f5f5;
                border-radius: 10px;
                color: #555;
            }

                .store-header-content .info div {
                    text-align: center;
                    width: 20%;
                }

                    .store-header-content .info div.store-introduction {
                        text-align: left;
                        width: 60%;
                    }

        .store-header .follow-btn {
            background-color: white;
            color: #b8860b;
            border: 2px solid #b8860b;
            padding: 5px 10px;
            border-radius: 10px;
            cursor: pointer;
            align-self: flex-start;
            font-size: 16px;
        }

            .store-header .follow-btn:hover {
                background-color: #b8860b;
                color: white;
            }

        .store-name {
            display: flex;
        }

        .leftside {
            flex: 90%;
        }

        .rightside {
            flex: 10%;
        }

        .filter-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 20px 0;
        }

            .filter-bar button,
            .filter-bar input {
                background-color: white;
                border: 1px solid #b8860b;
                border-radius: 10px;
                padding: 5px 15px;
                color: #b8860b;
                cursor: pointer;
                font-size: 16px;
            }

                .filter-bar button:hover {
                    background-color: #b8860b;
                    color: white;
                }

        .product-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
            transition: all 0.3s ease;
            width: 100%;
            /* 确保卡片宽度适应容器 */
            max-width: 300px;
            /* 调整卡片的最大宽度 */
            margin: 0 auto;
            /* 确保卡片居中 */
        }

            .product-card img {
                width: 100%;
                height: 200px; /* 固定圖片高度 */
                object-fit: cover; /* 確保圖片在固定高度時保持比例裁剪 */
            }

            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

            .product-card .card-body {
                padding: 10px;
            }

            .product-card .price {
                color: #b8860b;
                font-size: 18px;
                font-weight: bold;
            }

            .product-card .old-price {
                text-decoration: line-through;
                color: #999;
                margin-left: 10px;
            }

            .product-card .btn {
                background-color: white;
                color: #b8860b;
                border-color: #b8860b;
                border-radius: 10px;
                padding: 5px 10px;
            }

                .product-card .btn:hover {
                    background-color: #b8860b;
                    color: white;
                }

        .pagination {
            justify-content: center;
        }

            .pagination .page-item .page-link {
                color: #b8860b;
                border: 1px solid #b8860b;
                border-radius: 50%;
                width: 35px;
                height: 35px;
                display: flex;
                align-items: center;
                margin: 5px;
                justify-content: center;
            }

            .pagination .page-item.active .page-link {
                background-color: #b8860b;
                color: white;
            }

            .pagination .page-item .page-link i {
                font-size: 16px;
                color: #b8860b;
            }

                .pagination .page-item .page-link i:hover {
                    color: white;
                }

        .price-and-button {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
    </style>

}

<!-- 橫幅圖片輪播 -->
<div id="carouselExampleIndicators" class="carousel slide custom-carousel" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://images.unsplash.com/photo-1619444204794-fce6c6609600?q=80&w=2012&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                 class="d-block w-100" alt="chickenImage1">
        </div>
        <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1642451378137-7bf98fb6a65a?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                 class="d-block w-100" alt="chickenImage2">
        </div>
        <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1598965675045-45c5e72c7d05?q=80&w=2071&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                 class="d-block w-100" alt="chickenImage3">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- 個人賣場商品資訊 -->
<div class="container-custom">

    <!-- Store Header -->
    <div class="store-header mb-2">
        <img src="@Model.storeInfo.storeImagePath" alt="Store Logo">
        <div class="store-header-content">
            <div class="store-name">
                <h2 class="leftside mb-3">@Model.storeInfo.storeName</h2>
                <button class="follow-btn rightside">關注</button>
            </div>

            <div class="info">
                @* <div>評價星數<br>4.8</div> *@
                <div>創立時間<br>@Model.storeInfo.establishDate</div>
                <div>商品數量<br>@Model.storeInfo.productCount</div>
                <div class="store-introduction">賣場簡介<br>@Model.storeInfo.storeIntroduction</div>
                @* <div>粉絲數量<br>1.8 M</div> *@
            </div>
        </div>
    </div>

    <!-- Filter Bar -->
    <div class="filter-bar">
        <div>
            <button>綜合排序</button>
            <button>最新</button>
            <button>熱銷榜</button>
            <button onclick="sortProducts('price', 'asc')">價格(低到高)</button>
            <button onclick="sortProducts('price', 'desc')">價格(高到低)</button>
        </div>
        <div>
            <input id="inputSearch" type="text" placeholder="輸入關鍵字">
            <button id="buttonSearch" class="btn"><i class="fas fa-search"></i></button>
        </div>
    </div>

    <!-- Product Grid -->
    <div class="row g-3">      
        @foreach (var product in Model.products)
        {
            <div class="col-lg-4">
                <div class="product-card">
                    <img src="@product.productImagePath" alt="@product.productName">
                    <div class="card-body">
                        <h5 class="card-title">@product.productName</h5>
                        <div class="price-and-button">
                            <p class="price">$@(product.price.HasValue ? (product.price.Value * 0.8m).ToString("0") : "價格不詳") 
                                <span class="old-price">$@(product.price.HasValue ? product.price.Value.ToString("0") : "價格不詳")</span></p>
                            <button class="btn" onclick="window.location.href='/Frontstage/Product/ProductDetail?productSid=@product.productSid'">查看更多</button>
                        </div>
                    </div>
                </div>
            </div>
        }
        <!-- 複製上方的整個block程式碼，就可以複製卡片了 -->

        <!-- Pagination -->
        <nav class="mt-md-5">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#">
                        <i class="fas fa-angle-left"></i>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">
                        <i class="fas fa-angle-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    </div>

@section Scripts {

    <script>
        document.addEventListener('DOMContentLoaded', function () {
           const elements = document.querySelectorAll('.select-n');
              elements.forEach(function (element) {
                 new Choices(element, {
                    searchEnabled: false,
                    itemSelectText: ''
                 });
              });
        });
    </script>

}
