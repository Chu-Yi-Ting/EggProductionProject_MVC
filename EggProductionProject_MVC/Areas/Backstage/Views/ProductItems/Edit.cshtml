@model EggProductionProject_MVC.Models.ProductItem

@{
    ViewData["Title"] = "Edit";
}

@section Styles {

    <style>
        .bold-text {
            font-weight: bold;
            font-size: 28px;
        }

        label {
            font-size: 20px;
        }

        .btn {
            margin-top: 10px; /* 为按钮添加额外的顶部间距 */
        }       
    </style>

}

<h4 class="bold-text">編輯分類項目</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ItemNo" />
            <div class="form-group">
                <label asp-for="SubcategoryNo" class="control-label">產品分類</label>
                <select asp-for="SubcategoryNo" class="form-control" asp-items="ViewBag.SubcategoryNo"></select>                
            </div>
            <div class="form-group">
                <label asp-for="ItemName" class="control-label">項目名稱</label>
                <input asp-for="ItemName" class="form-control" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemDescription" class="control-label">項目描述</label>
                <textarea asp-for="ItemDescription" class="form-control" rows="3" cols="50"></textarea>
                <span asp-validation-for="ItemDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-secondary btn-sm">
                    <i class="fa-solid fa-save"></i> 儲存
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <button type="button" class="btn btn-secondary btn-sm" onclick="location.href='@Url.Action("Index")'">
        <i class="fa-solid fa-arrow-left"></i> 回分類項目清單
    </button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
