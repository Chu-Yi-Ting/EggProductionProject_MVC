                    alert('刪除失敗，請稍後再試。');
                }
            }
        });

        //成功刪除後顯示 Toast
        function showDeleteToast(message) {
            const toastElement = document.getElementById('deleteToast');
            const toastBody = toastElement.querySelector('.toast-body');
            toastBody.textContent = message;
            const toast = new bootstrap.Toast(toastElement);
            setTimeout(function () {
                toast.show();
            }, 1000);
        }

        //當商品上架上傳圖片的input值有變動，會觸發previewImage方法，會將圖片的url塞給ID為imagePreview的標籤，標籤顯示狀態改為block
        let cropper;
        let croppedImageBlob = null;
        let flipX = 1; // 記錄水平翻轉狀態
        let flipY = 1; // 記錄垂直翻轉狀態

        function launchPreviewImage(event) {
            const image = document.getElementById('launchImagePreview');
            const file = event.target.files[0];

            const reader = new FileReader();
            reader.onload = function (e) {
                image.src = e.target.result;
                image.style.display = 'block';

                if (cropper) {
                    cropper.destroy();
                }
                cropper = new Cropper(image, {
                    aspectRatio: NaN,
                    viewMode: 1
                });

                document.getElementById('cropImageButton').style.display = 'inline-block';
                document.getElementById('rotateLeftButton').style.display = 'inline-block';
                document.getElementById('rotateRightButton').style.display = 'inline-block';
                document.getElementById('resetButton').style.display = 'inline-block';
                document.getElementById('flipHorizontalButton').style.display = 'inline-block';
                document.getElementById('flipVerticalButton').style.display = 'inline-block';
            };
            reader.readAsDataURL(file);
        }

        // 当用户点击裁剪按钮时，获取裁剪后的图像
        document.getElementById('cropImageButton').addEventListener('click', function () {
            const canvas = cropper.getCroppedCanvas();

            // 設定 canvas 的尺寸，與裁剪的尺寸保持一致
            const croppedCanvas = document.getElementById('croppedCanvas');
            croppedCanvas.width = canvas.width;
            croppedCanvas.height = canvas.height;
            croppedCanvas.style.display = 'block';

            // 確保畫布上的圖片不會變形，根據裁剪結果繪製圖片
            const ctx = croppedCanvas.getContext('2d');
            ctx.clearRect(0, 0, croppedCanvas.width, croppedCanvas.height); // 清除之前的內容
            ctx.drawImage(canvas, 0, 0, croppedCanvas.width, croppedCanvas.height);

            // 将裁剪后的图片转为 Blob 对象
            canvas.toBlob(function (blob) {
                // 将裁剪后的 Blob 对象存储到全局变量中
                croppedImageBlob = blob;
            });
        });

        // Cropper旋轉左90度
        document.getElementById('rotateLeftButton').addEventListener('click', function () {
            if (cropper) {
                cropper.rotate(-90);
            }
        });

        // Cropper旋轉右90度
        document.getElementById('rotateRightButton').addEventListener('click', function () {
            if (cropper) {
                cropper.rotate(90);
            }
        });

        // Cropper重置圖片
        document.getElementById('resetButton').addEventListener('click', function () {
            if (cropper) {
                cropper.reset(); // 重置到初始狀態
                flipX = 1;
                flipY = 1;
            }
        });

        // Cropper水平翻轉
        document.getElementById('flipHorizontalButton').addEventListener('click', function () {
            if (cropper) {
                flipX = -flipX; // 切換水平翻轉狀態
                cropper.scaleX(flipX);
            }
        });

        // Cropper垂直翻轉
        document.getElementById('flipVerticalButton').addEventListener('click', function () {
            if (cropper) {
                flipY = -flipY; // 切換垂直翻轉狀態
                cropper.scaleY(flipY);
            }
        });

        //當編輯上傳圖片的input值有變動，會觸發previewImage方法，會將圖片的url塞給ID為imagePreview的標籤，標籤顯示狀態改為block
        function editPreviewImage(event) {
            const image = document.getElementById('editImagePreview');
            image.src = URL.createObjectURL(event.target.files[0]);
            image.style.display = 'block';
        }

        //按下重整按鈕，AJAX局部刷新當前上架及審核中分頁的表格資料
        document.getElementById('refreshButton').addEventListener('click', async function () {
            try {
                // 發送 AJAX 請求以獲取更新後的商品列表
                const api = '@Url.Content("~/Frontstage/Store/ProductLaunch")';
                const response = await fetch(api, {
                    method: 'GET',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                });

                // 檢查回應是否成功
                if (!response.ok) {
                    throw new Error('HTTP error! status: ' + response.status);
                }

                // 解析 JSON 資料
                const data = await response.json();
                console.log(data);
                if (data.success) {
                    // 清空當前上架和審核中的商品表格
                    const currentProductsTable = document.querySelector('#pills-one tbody');
                    currentProductsTable.innerHTML = ''; // 清空表格
                    const reviewingProductsTable = document.querySelector('#pills-two tbody');
                    reviewingProductsTable.innerHTML = ''; // 清空表格

                    // 添加新的當前上架商品到表格
                    data.currentProducts.forEach(product => {
                        addProductToLaunchTab(product); // 將商品新增到當前上架分頁
                    });

                    // 添加新的審核中商品到表格
                    data.reviewingProducts.forEach(product => {
                        addProductToReviewingTab(product); // 將商品新增到審核中分頁
                    });

                } else {
                    alert('重整失敗，請稍後再試。');
                }
