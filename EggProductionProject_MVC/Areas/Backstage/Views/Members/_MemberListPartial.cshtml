@model IEnumerable<EggProductionProject_MVC.Models.MemberVM.MemberVM>

@section Styles {
    <style>
        table.table-hover tbody tr:hover {
            background-color: #f0e68c !important; /* 淡黄色背景 */
            color: #333333 !important; /* 深色文字 */
        }
    </style>
}


<table id="maintable" class="table table-hover table-striped" style="color: #333333 ">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Phone)</th>
            <th>@Html.DisplayNameFor(model => model.BirthDate)</th>
            <th>@Html.DisplayNameFor(model => model.IsChickFarm)</th>
            <th>@Html.DisplayNameFor(model => model.ProfilePic)</th>
            <th>@Html.DisplayNameFor(model => model.IsBlocked)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                <td>@Html.DisplayFor(modelItem => item.BirthDate)</td>
                <td>@(item.IsChickFarm == 1 ? "雞農" : "一般用戶")</td>
                <td><partial name="_ProfilePicPartialView" model="@item" /></td>
                <td>@(item.IsBlocked == 1 ? "禁用" : "活耀")</td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.MemberSid">Details</a> |
                    <a asp-controller="Friends" asp-action="index" asp-route-id="@item.MemberSid">好友查詢</a> |
                    <a asp-controller="Logs" asp-action="index" asp-route-id="@item.MemberSid">登入查詢</a> |
                    <a  asp-action="Edit" asp-route-id="@item.MemberSid">修改</a>

                </td>
            </tr>
        }
    </tbody>
</table>





@section Scripts{
    <script>
        $(document).ready(function () {
            var table = $('#maintable').DataTable();
            $('#maintable tbody').on('click', 'tr', function () {
                const data = table.row(this).data();
                console.log("Row data: ", data);  // 確認是否正確取得行資料
            });
        });
    </script>
}