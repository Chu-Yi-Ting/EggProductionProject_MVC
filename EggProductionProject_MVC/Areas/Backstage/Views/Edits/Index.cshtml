@model IEnumerable<EggProductionProject_MVC.Models.Edit>

@{
    ViewData["Title"] = "Index";
    int maxLength = 200; // 定義最大顯示字數
}
<style>
    /* 表格样式 */
    .table-hover {
        width: 100%;
        border-collapse: collapse; /* 合并边框 */
        font-family: 'Arial', sans-serif; /* 字体族 */
        font-size: 16px; /* 字体大小 */
        line-height: 1.6; /* 行高 */
    }
        /* 表头样式 */
        .table-hover thead th {
            /* background-color: #4169E1; /* 主题颜色 */ */
            /* color: #ffffff; */
            padding: 12px; /* 调整内边距 */
            text-align: left;
            font-weight: bold;
            font-size: 18px; /* 增大表头字体 */
            border: 1px solid #dddddd; /* 表头边框 */
        }

        /* 表格内容样式 */
        .table-hover tbody td {
            padding: 12px; /* 调整内边距 */
            border: 1px solid #dddddd; /* 单元格边框 */
            vertical-align: middle;
        }

        /* 悬停效果 */
        .table-hover tbody tr:hover {
            background-color: #f0e68c; /* 淡黃色背景 */
            color: #333333; /* 深色文字 */
        }
    /* 控制各列宽度 */
    .column-edit-before,
    .column-edit-after {
        width: 25%; /* 調整 EditBefore 和 EditAfter 列寬 */
        max-width: 25%; /* 設置最大寬度 */
        overflow: hidden; /* 隐藏溢出的内容 */
        text-overflow: ellipsis; /* 添加省略号 */
        white-space: nowrap; /* 不换行 */
    }

    .column-edit-time,
    .column-article-title,
    .column-reply-sid {
        width: 10%; /* 調整其他列寬 */
        max-width: 10%;
    }
</style>
<h1>編輯紀錄</h1>

<table class="table table-hover table-striped">
    <thead>
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th class="column-edit-before">編輯前內容</th>
                    <th class="column-edit-after">編輯後內容</th>
                    <th class="column-edit-time">編輯日期</th>
                    <th class="column-article-title">文章標題</th>
                    <th class="column-reply-sid">回覆編號</th>
                </tr>
            </thead>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="cursor: pointer;" onclick="location.href='@Url.Action("Details", new { id = item.EditSid })'">
                <td>
                    @{
                        var editBefore = item.EditBefore;
                        if (editBefore.Length > maxLength)
                        {
                            editBefore = editBefore.Substring(0, maxLength) + "...";
                        }
                    }
                    @Html.Raw(editBefore)
                </td>
                <td>
                    @{
                        var editAfter = item.EditAfter;
                        if (editAfter.Length > maxLength)
                        {
                            editAfter = editAfter.Substring(0, maxLength) + "...";
                        }
                    }
                    @Html.Raw(editAfter)
                </td>
                <td>@Html.DisplayFor(modelItem => item.EditTime)</td>
                <td>@Html.DisplayFor(modelItem => item.ArticleS.ArticleTitle)</td>
                <td>@Html.DisplayFor(modelItem => item.ReplyS.ReplySid)</td>
            </tr>
        }
    </tbody>
</table>
