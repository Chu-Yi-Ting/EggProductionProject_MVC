@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "輸入帳戶驗證碼";
}
@section Styles {
    <style>
  

        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden; /* 防止頁面滾動條 */
        }

        /* 設定影片為背景，並覆蓋整個頁面 */
        #background-video {
            background-size:cover;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover; /* 確保影片覆蓋整個畫面並保持比例 */
            z-index: 0; /* 放在背景 */
        }

        /* 讓 .login-box 內容顯示在影片之上 */
        .login-box {
            
            position: relative;
            z-index: 10; /* 確保它顯示在影片上方 */
            width: 100%;
            max-width: 550px;
            padding: 40px;
            padding-top:100px;
            border-radius: 10px;
            background-color: #fff;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            margin: auto;
            margin-top:100px;
        }

            .login-box h1 {
                color: #b3922c;
                background-color: white;
                font-size: 24px;
                margin-bottom: 20px;
                text-align: center;
            }

            .login-box label {
                color: #b3922c;
            }

            .login-box .btn-primary {
                background-color: #b3922c;
                border: none;
            }

                .login-box .btn-primary:hover {
                    background-color: #a37e2b;
                }

    </style>
}

<h2>@ViewData["Title"]</h2>
<hr />
<p></p>


<body>
<!-- Video element -->
<video autoplay muted loop id="background-video">
    <source src="~/MemberImg/BreakingEgg.mp4" type="video/mp4">
    您的瀏覽器不支援影片播放。
</video>




            <div class="login-box">
                <h1>您的帳號已被雙因子驗證保護。請在下方輸入您的Google Authenticator驗證代碼。</h1>
                <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                    <input asp-for="RememberMe" type="hidden" />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label >驗證代號</label>
                        <input asp-for="Input.TwoFactorCode" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMachine">
                                <input asp-for="Input.RememberMachine" />
                               記得我
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary w-100 me-2">確定</button>
                    </div>
                </form>

                <p>
                    手邊沒有驗證的應用程式嗎?您可以
                    <a asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">使用序號登入</a>.
                </p>
            </div>

</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}