@model IEnumerable<EggProductionProject_MVC.Models.Edit>
@{
    int maxLength = 200;
}
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th class="column-edit-before">編輯前內容</th>
            <th class="column-edit-after">編輯後內容</th>
            <th class="column-edit-time">編輯日期</th>
            <th class="column-article-title">文章標題</th>
            <th class="column-reply-sid">回覆編號</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="cursor: pointer;" onclick="loadDetails('@item.EditSid')">
                <td>
                    @{
                        var editBefore = item.EditBefore;
                        if (editBefore.Length > maxLength)
                        {
                            editBefore = editBefore.Substring(0, maxLength) + "...";
                        }
                    }
                    @Html.Raw(editBefore)
                </td>
                <td>
                    @{
                        var editAfter = item.EditAfter;
                        if (editAfter.Length > maxLength)
                        {
                            editAfter = editAfter.Substring(0, maxLength) + "...";
                        }
                    }
                    @Html.Raw(editAfter)
                </td>
                <td>@Html.DisplayFor(modelItem => item.EditTime)</td>
                <td>@Html.DisplayFor(modelItem => item.ArticleS.ArticleTitle)</td>
                <td>@Html.DisplayFor(modelItem => item.ReplyS.ReplySid)</td>
            </tr>
        }
    </tbody>
</table>
