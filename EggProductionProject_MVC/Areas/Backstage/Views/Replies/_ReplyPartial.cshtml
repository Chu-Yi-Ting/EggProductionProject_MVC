@model IEnumerable<EggProductionProject_MVC.Models.Reply>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>回覆標題</th>
            <th>回覆者</th>
            <th>回覆內容</th>
            <th>是否刪除</th>
            <th>公開狀態</th>
            <th>回覆日期</th>
            <th>更新日期</th>
            <th>編輯次數</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="cursor: pointer;" onclick="location.href='@Url.Action("Edit", new { id = item.ReplySid })'">
                <td>@Html.DisplayFor(modelItem => item.ArticleS.ArticleTitle)</td>
                <td>@Html.DisplayFor(modelItem => item.ArticleCreaterS.UserName)</td>
                <td>@Html.DisplayFor(modelItem => item.ReplyInfo)</td>
                <td>
                    @if (item.DeleteOrNot == true)
                    {
                        <span>是</span>
                    }
                    else
                    {
                        <span>否</span>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.PublicStatusNoNavigation.StatusDescription)</td>
                <td>@Html.DisplayFor(modelItem => item.ReplyDate)</td>
                <td>@Html.DisplayFor(modelItem => item.ReplyUpdate)</td>
                <td>@Html.DisplayFor(modelItem => item.EditTimes)</td>
            </tr>
        }
    </tbody>
</table>

