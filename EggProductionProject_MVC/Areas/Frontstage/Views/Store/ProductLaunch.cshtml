@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
    <script>
        //-----商品上架功能---------------------------------------------------------------
        // 商品上架modal送出按鈕綁定事件，顯示確認的Modal
        $('#confirmSubmitButton').click(function (e) {
            e.preventDefault(); // 阻止表單的默認提交
            $('#confirmSubmitModal').modal('show');
        });

        //根據商品分類再局部更新品項分類的下拉式選單
        async function updateItemOptions() {
            const subcategoryNo = document.getElementById('subcategoryNo').value;

            try {
                // 發送AJAX請求到後端
                const api = `@Url.Content("~/Frontstage/StoreApi/GetItemsBySubcategory")?subcategoryNo=${subcategoryNo}`
                const response = await fetch(api);
                const data = await response.json();
                console.log(data);
                const itemSelect = document.getElementById('itemNo');
                itemSelect.innerHTML = ''; // 清空現有的選項

                data.forEach(item => {
                    const option = document.createElement('option');
                    option.value = item.itemNo;
                    option.text = item.itemName;
                    itemSelect.appendChild(option);
                });
            } catch (error) {
                console.error('Error fetching items:', error);
            }
        }

        //確認的Modal按下"是"，提交表單給ProductLaunch的API
        document.getElementById('confirmSubmitYes').addEventListener('click', async function () {
            // 获取表单元素
            const form = document.getElementById('productForm');
            formData = new FormData(form);

            // 获取上传的原始文件
            const fileInput = document.getElementById('productImage');
            const originalFile = fileInput.files[0];

            if (croppedImageBlob && originalFile) {
                // 获取原始文件名并将其用于裁剪后的文件名
                const originalFileName = originalFile.name;
                const croppedFileName = `cropped_${originalFileName}`; // 添加前缀以区分裁剪后的文件

                // 将裁剪后的 Blob 添加到 FormData 中，使用原始文件名
                formData.append('croppedImage', croppedImageBlob, croppedFileName);
            }

            try {
                // 使用 fetch API 发送表单数据
                const api = '@Url.Content("~/Frontstage/StoreApi/ProductLaunch")'
                const response = await fetch(api, {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    // 显示成功的 Toast 通知
                    showCreateToast('商品已成功送出審核!');

                    // 當表單被提交後
                    form.reset(); // 清空表单内容               
                    document.getElementById('launchImagePreview').src = '/images/noimage2.jpg'; // 恢復到預設的圖片                   
                    document.getElementById('croppedCanvas').style.display = 'none'
                    document.getElementById('cropImageButton').style.display = 'none'; // 隱藏裁剪按鈕

                    // 銷毀當前的 Cropper 實例
                    if (cropper) {
                        cropper.destroy();
                        cropper = null; // 清空 cropper 變數
                    }

                    // 清空裁剪後的圖片Blob
                    croppedImageBlob = null;

                    // 更新審核中页面的商品列表
                    afterLaunchaddProductToReviewingTab(result.newProduct);

                    // 关闭兩個弹出窗口            
                    const confirmSubmitModal = bootstrap.Modal.getInstance(document.getElementById('confirmSubmitModal'));
                    confirmSubmitModal.hide();
                    const exampleModal = bootstrap.Modal.getInstance(document.getElementById('exampleModalToggle'));
                    exampleModal.hide();
                } else {
                    alert('提交失败: ' + result.message);
                }
            } catch (error) {
                console.error('提交时发生错误:', error);
                alert('提交时发生错误，请稍后再试。');
            }
        });

        //表單資料成功送到後端，返回成功，跳出成功通知toast
        function showCreateToast(message) {
            const toastElement = document.getElementById('createToast');
            const toastBody = toastElement.querySelector('.toast-body');
            toastBody.textContent = message;
            const toast = new bootstrap.Toast(toastElement);
            setTimeout(function () {
                toast.show();
            }, 1000);
        }

        // 更新審核中分頁局部内容
        function afterLaunchaddProductToReviewingTab(product) {
            const table = document.querySelector('#pills-two tbody');
            const formattedPrice = product.price.toLocaleString('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 0 });
            const newRow = `
                <tr id="product-row-${product.productSid}">
                    <td>${product.productName}</td>
                    <td>$${formattedPrice}</td>
                    <td>${product.stock}</td>
                    <td>${product.launchTime}</td>
                    <td>
                        <button class="btn btn-custom" onclick="openEditModal(${product.productSid})">編輯</button>
                        <button class="btn btn-custom" onclick="openDeleteModal(${product.productSid})">取消審核</button>
                    </td>
                </tr>`;
            table.insertAdjacentHTML('afterbegin', newRow);
        }

        // 當使用者按下 "否" 時，關閉兩個 Modal
        $('#confirmSubmitModal .btn-secondary').click(function () {
            $('#confirmSubmitModal').modal('hide'); // 隱藏確認的 Modal
            $('#exampleModalToggle').modal('hide'); // 同時隱藏商品上架 Modal
        });

        //每當新增商品的modal被關閉的時候都要清空表單
        document.getElementById('exampleModalToggle').addEventListener('hide.bs.modal', function (e) {
            // 重置表单
            document.getElementById('productForm').reset();
            // 清空圖片預覽
            document.getElementById('launchImagePreview').src = '@Url.Content("~/images/noimage2.jpg")';
            document.getElementById('croppedCanvas').style.display = 'none';
            // 隱藏裁剪按鈕
            document.getElementById('cropImageButton').style.display = 'none';

            // 銷毀當前的 Cropper 實例
            if (cropper) {
                cropper.destroy();
                cropper = null; // 清空 cropper 變數
            }

            // 清空裁剪後的圖片Blob
            croppedImageBlob = null;
        });

        //-----編輯功能---------------------------------------------------------------        
        // 點擊編輯按鈕，發送請求取得商品資料，並將資料顯示在編輯的modal中
        async function openEditModal(productSid) {
            try {
                // 重置上傳的檔案的input，讓其不顯示上次上傳的檔案名稱
                document.getElementById('editProductModal').addEventListener('shown.bs.modal', function () {                    
                    document.getElementById('editproductImage').value = '';
                });

                const api = `@Url.Content("~/Frontstage/StoreApi/GetProductById")?productSid=${productSid}`;
                const response = await fetch(api);
                const product = await response.json();
                console.log(product);

                // 將資料填入編輯 modal 的表單中
                document.getElementById('editProductSid').value = product.productSid;
                document.getElementById('editProductName').value = product.productName;
                document.getElementById('editPrice').value = product.price;
                document.getElementById('editImagePreview').src = product.productImagePath;
                document.getElementById('editSubcategoryNo').value = product.subcategoryNo;
                document.getElementById('editSubcategoryName').value = product.subcategoryName;
                document.getElementById('editItemNo').value = product.itemNo;
                document.getElementById('editItemName').value = product.itemName;
                document.getElementById('editDescription').value = product.description;
                document.getElementById('editQuantity').value = product.quanitity;
                document.getElementById('editWeight').value = product.weight;
                document.getElementById('editComponent').value = product.component;
                document.getElementById('editDiscount').value = product.discountPercent;

                // 顯示編輯的modal
                const editModal = new bootstrap.Modal(document.getElementById('editProductModal'));
                editModal.show();
            } catch (error) {
                console.error('獲取商品資料時發生錯誤:', error);
            }
        }

        // 編輯商品表單modal中當點擊保存變更送出按鈕時，顯示確認的Modal
        $('#submitEditButton').click(function (e) {
            e.preventDefault(); // 阻止表單的默認提交
            $('#confirmEditModal').modal('show');
        });
            

        // 編輯:當使用者按下 "是" 時，提交表單
        document.getElementById('confirmEditYes').addEventListener('click', async function () {

            const form = document.getElementById('editProductForm');
            const formData = new FormData(form);

            try {
                const api = '@Url.Content("~/Frontstage/StoreApi/EditProduct")';
                const response = await fetch(api, {
                    method: 'POST',
                    body: formData
                });

                //前端的 fetch 請求返回時，先檢查 response 是否為有效的 JSON，並在返回前檢查數據格式
                if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                }
                const result = await response.json();
                console.log(result);
                if (result.success) {
                    // 显示編輯成功的 Toast 通知
                    showEditToast('商品已成功編輯資訊!');

                    // 局部更新表格中的商品資料
                    editProductToLaunchTab(result);
                   

                    // 隱藏編輯的modal和確認的modal
                    const confirmEditModal = bootstrap.Modal.getInstance(document.getElementById('confirmEditModal'));
                    confirmEditModal.hide();

                    const editModal = bootstrap.Modal.getInstance(document.getElementById('editProductModal'));
                    editModal.hide();

                    // 手動移除 `.modal-backdrop` 避免遮罩留在頁面上
                    document.querySelectorAll('.modal-backdrop').forEach(el => el.remove());
                } else {
                    alert('更新失敗：' + result.message);
                }
            } catch (error) {
                console.error('更新商品資料時發生錯誤:', error);
                alert('更新失敗，請稍後再試。');
            }
        });


        document.getElementById('editProductModal').addEventListener('hidden.bs.modal', function () {
            // 手动移除残留的模态框遮罩
            var modalBackdrop = document.querySelectorAll('.modal-backdrop');
            if (modalBackdrop) {
                modalBackdrop.forEach(function (backdrop) {
                    backdrop.remove();
                });
            }

            // 如果没有其他模态框在显示，恢复页面滚动
            if (!document.querySelector('.modal.show')) {
                document.body.style.overflow = 'auto';
            }
        });

        //表單資料成功送到後端，返回成功，跳出成功通知toast
        function showEditToast(message) {
            const toastElement = document.getElementById('editToast');
            const toastBody = toastElement.querySelector('.toast-body');
            toastBody.textContent = message;
            const toast = new bootstrap.Toast(toastElement);
            setTimeout(function () {
                toast.show();
            }, 1000);
        }

        // 更新當前上架中分頁局部内容
        function editProductToLaunchTab(result) {
            const row = document.getElementById(`product-row-${result.updatedProduct.productSid}`);
            row.querySelector('td:nth-child(1)').textContent = result.updatedProduct.productName;
            row.querySelector('td:nth-child(2)').textContent = `$${result.updatedProduct.price}`;
            row.querySelector('td:nth-child(3)').textContent = result.updatedProduct.stock;
            row.querySelector('td:nth-child(4)').textContent = result.updatedProduct.launchTime;
        }

        // 當使用者按下 "否" 時，關閉兩個 Modal
        $('#confirmEditModal .btn-secondary').click(function () {
            $('#confirmEditModal').modal('hide'); // 隱藏確認的 Modal
            $('#editProductModal').modal('hide'); // 同時隱藏編輯商品Modal
            // 手動移除 `.modal-backdrop` 避免遮罩留在頁面上
            document.querySelectorAll('.modal-backdrop').forEach(el => el.remove());
        });

        //-----軟刪除鍵功能-----------------------------------------------------------
        // 按下刪除鍵，顯示刪除確認modal
        function openDeleteModal(productSid) {
            selectedProductSid = productSid;
            console.log("要删除的商品ID:", selectedProductSid);
            const deleteModal = new bootstrap.Modal(document.getElementById('confirmDeleteModal'));
            deleteModal.show();
        }

        // 軟刪除確認modal的刪除確定按鈕綁定事件
        let selectedProductSid = null;

        document.getElementById('confirmDeleteYes').addEventListener('click', async function () {
            if (selectedProductSid !== null) {
                try {
                    const api = '@Url.Content("~/Frontstage/StoreApi/DeleteProduct")'
                    const response = await fetch(api, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ productSid: selectedProductSid })
                    });

                    const data = await response.json();
                    console.log(data);  // 查看伺服器返回的資料

                    if (data.success) {
                        const deleteModal = bootstrap.Modal.getInstance(document.getElementById('confirmDeleteModal'));
                        deleteModal.hide();
                        // 成功刪除後顯示 Toast
                        showDeleteToast('商品已成功刪除');

                        // 局部更新，移除該商品的行
                        const productRow = document.getElementById(`product-row-${selectedProductSid}`);
                        if (productRow) {
                            productRow.remove(); // 從 DOM 中删除該行
                        }
