@{
    Layout = "_FrontLayout_light";
}

@section Styles {

    <style>
        .container-custom {
            max-width: 1200px;
            /* 調整容器寬度以增加留白 */
            margin: 0 auto;
            /* 居中對齊 */
            padding: 20px;
            /* 增加上下內邊距 */
        }

        .custom-carousel img {
            width: 100%;
            /* 保持图片宽度与容器一致 */
            height: 350px;
            /* 固定高度，例如400px，可以根据需要调整 */
            object-fit: cover;
            /* 让图片在保持宽度满版的同时裁剪高度超出部分 */
        }

        .filter-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 20px 0;
        }

            .filter-bar button,
            .filter-bar input {
                background-color: white;
                border: 1px solid #b8860b;
                border-radius: 10px;
                padding: 5px 15px;
                color: #b8860b;
                cursor: pointer;
                font-size: 16px;
            }

                .filter-bar button:hover {
                    background-color: #b8860b;
                    color: white;
                }

        .filter-sidebar {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }

            .filter-sidebar h5 {
                color: #b8860b;
                font-size: 16px;
                margin-bottom: 15px;
            }

            .filter-sidebar h4 {
                color: #b8860b;
                font-size: 20px;
                margin-bottom: 15px;
                padding: 8px;
            }

            .filter-sidebar .form-check-label,
            .filter-sidebar .form-check-input {
                cursor: pointer;
            }

            .filter-sidebar .form-check-label {
                margin-left: 10px;
                font-size: 16px;
            }

            .filter-sidebar .form-control {
                border-radius: 5px;
                margin-bottom: 10px;
            }

            .filter-sidebar .btn-outline-primary {
                color: #b8860b;
                border-color: #b8860b;
                border-radius: 10px;
            }

                .filter-sidebar .btn-outline-primary:hover {
                    background-color: #b8860b;
                    color: white;
                }

        /* 限時特賣區的css樣式 */
        .limited-offer {
            padding: 15px;
            background-color: #f9f9f9;
            border-radius: 10px;
            border: 1px solid #ddd;
        }

            .limited-offer h4 {
                font-size: 20px;
                font-weight: bold;
            }

        .offer-timer {
            font-size: 18px;
            color: #b8860b;
        }

        .carousel-control-buttons button {
            background-color: white;
            border-radius: 50%;
            border: 1px solid #b8860b;
            color: #b8860b;
        }

            .carousel-control-buttons button:hover {
                background-color: #b8860b;
                color: white;
            }

        .product-card-limit {
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
            transition: all 0.3s ease;
            width: 100%;
            max-width: 250px;
            /* 減小卡片的最大寬度 */
            margin: 0 auto;
        }

            .product-card-limit img {
                width: 100%;
                height: auto;
            }

            .product-card-limit:hover {
                transform: translateY(-5px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

            .product-card-limit .card-body {
                padding: 10px;
            }

                .product-card-limit .card-body .card-title {
                    font-size: 16px;
                }

            .product-card-limit .price {
                color: #b8860b;
                font-size: 16px;
                font-weight: bold;
            }

            .product-card-limit .old-price {
                text-decoration: line-through;
                color: #999;
                margin-left: 10px;
            }

            .product-card-limit .btn {
                background-color: white;
                color: #b8860b;
                border-color: #b8860b;
                border-radius: 10px;
                padding: 5px 10px;
                font-size: 12px;
            }

                .product-card-limit .btn:hover {
                    background-color: #b8860b;
                    color: white;
                }

        /* 限時特賣區的css樣式 */
        .product-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
            transition: all 0.3s ease;
            width: 100%;
            /* 确保卡片宽度适应容器 */
            max-width: 300px;
            /* 调整卡片的最大宽度 */
            margin: 0 auto;
            /* 确保卡片居中 */
        }

            .product-card img {
                width: 100%;
                height: 200px; /* 固定圖片高度 */
                object-fit: cover; /* 確保圖片在固定高度時保持比例裁剪 */
            }

            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

            .product-card .card-body {
                padding: 10px;
            }

                .product-card .card-body .card-title {
                    font-size: 16px;
                }

            .product-card .price {
                color: #b8860b;
                font-size: 16px;
                font-weight: bold;
            }

            .product-card .old-price {
                text-decoration: line-through;
                color: #999;
                margin-left: 10px;
            }

            .product-card .btn {
                background-color: white;
                color: #b8860b;
                border-color: #b8860b;
                border-radius: 10px;
                padding: 5px 10px;
                font-size: 12px;
            }

                .product-card .btn:hover {
                    background-color: #b8860b;
                    color: white;
                }

        .pagination {
            justify-content: center;
        }

            .pagination .page-item .page-link {
                color: #b8860b;
                border: 1px solid #b8860b;
                border-radius: 50%;
                width: 35px;
                height: 35px;
                display: flex;
                align-items: center;
                margin: 5px;
                justify-content: center;
            }

            .pagination .page-item.active .page-link {
                background-color: #b8860b;
                color: white;
            }

            .pagination .page-item .page-link i {
                font-size: 16px;
                color: #b8860b;
            }

                .pagination .page-item .page-link i:hover {
                    color: white;
                }

        .price-and-button {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
    </style>

