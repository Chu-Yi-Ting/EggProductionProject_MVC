@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "驗證信寄出";
}

@* <h2>@ViewData["Title"]</h2> *@



@section Styles {
    <style>


        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden; /* 確保背景覆蓋整個頁面，不會出現滾動條 */
        }

        /* 設定影片為背景，並覆蓋整個頁面 */
        #background-video {
            background-size: cover;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover; /* 確保影片覆蓋整個畫面並保持比例 */
            z-index: 0; /* 放在背景 */
        }

        /* 讓 .login-box 內容顯示在影片之上 */
        .login-box {
            position: relative;
            z-index: 10; /* 確保它顯示在影片上方 */
            width: 100%;
            max-width: 600px;
            padding: 40px;
            padding-top: 50px;
            border-radius: 10px;
            background-color: #fff;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            margin: auto;
            margin-top: 400px;
        }

            .login-box h1 {
                color: #b3922c;
                background-color: white;
                font-size: 24px;
                margin-bottom: 20px;
                text-align: center;
            }

            .login-box label {
                color: #b3922c;
            }

            .login-box .btn-primary {
                background-color: #b3922c;
                border: none;
            }

                .login-box .btn-primary:hover {
                    background-color: #a37e2b;
                }

    </style>
}



<body>
    <!-- Video element -->
    <video autoplay muted loop id="background-video">
        <source src="~/MemberImg/BreakingEgg.mp4" type="video/mp4">
        您的瀏覽器不支援影片播放。
    </video>

    <div class="login-box">
        <h2>驗證信已寄出</h2>
        @{
            if (@Model.DisplayConfirmAccountLink)
            {
                <p>
                    This app does not currently have a real email sender registered, see <a href="https://aka.ms/aspaccountconf">these docs</a> for how to configure a real email sender.
                    Normally this would be emailed: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Click here to confirm your account</a>
                </p>
            }
            else
            {

                <p>
                    請至信箱收取信件，並且點擊連結以完成驗證
                </p>
            }
        }
    </div>

</body>





